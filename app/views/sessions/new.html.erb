<div id="login-form">
  <h1>Sign In!</h1>
  <%= flash[:alert] if flash[:alert] %>
  <br /><br />
  <%= form_for :session, url: sessions_path do |f| %>
    <%= f.label :email %>
    <br />
    <%= f.text_field :email %>
    <br /><br />
    <%= f.label :password %>
    <br />
    <%= f.text_field :password %>
    <br /><br />
    <%= f.submit "Sign In" %>
  <% end %>
</div>