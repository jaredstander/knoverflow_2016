<div id="new-answer-form">
  <h4 class="first-heading">Post an Answer</h4>
  <%= form_for [@question, @answer], remote: true do |f| %>
    <%= f.label :content %>
    <br />
    <%= f.text_field :content, placeholder: "Your Answer" %>
    <br /><br />
    <%= f.submit 'Submit Answer' %>
  <% end %>
</div>