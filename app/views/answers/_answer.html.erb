<h5><%= answer.content %></h5>
<h6>posted by <%= answer.user.name %></h6>
<% if answer.user == current_user %>
  <%= link_to "Delete", question_answer_path(@question, answer), :confirm => "Are you sure?", :method => :delete %>
  <%= link_to "Edit", [:edit, @question, answer] %>
<% end %>
<br />
<% if answer.comments.any? %>
  <h4><%= answer.comments.count %> comments:</h4>
  <% @question.comments.all.each do |comment| %>
    <%= render partial: 'comments/comment', locals: {comment: comment, commentable: answer} %>
  <% end %>
<% end %>