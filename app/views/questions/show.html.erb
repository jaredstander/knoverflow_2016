<% if @question.user == current_user %>
  <%= button_to "delete", question_path(@question), {method: :delete} %>
  <%= button_to "edit", edit_question_path(@question.id), {method: :get} %>
<% end %>
<h1><%= @question.title %></h1>
<h3><%= @question.content %></h3>
<%= render partial: '/comments/comments', locals: {commentable: @question } %>
<br />
<%= link_to 'create comment', new_question_comment_path(@question), remote: true %>
<%= link_to 'answer question', new_question_answer_path(@question), remote: true %>
<span id='create_answer'></span>
<% if @question.answers.any? %>
  <h4><%= @question.answers.count %> answers below:</h4>
  <% @question.answers.all.each do |answer| %>
    <%= render partial: 'answers/answer', locals: {answer: answer} %>
  <% end %>
<% end %>