<div class="edit-form">
  <h1>Post a Question</h1>
  <% if current_user %>
    <div class="error"><%= flash[:error] if flash[:error] %></div>
    <%= form_for @question do |f| %>
      <%= f.label :title %>
      <br />
      <%= f.text_field :title %>
      <br /><br />
      <%= f.label :content %>
      <br />
      <%= f.text_area :content %>
      <br /><br />
      <%= f.submit %>
    <% end %>
  <% end %>
</div>