<h1>Post a Question Here!</h1>
<% if current_user %>
  <%= flash[:error] if flash[:error] %>
  <%= form_for @question do |f| %>
    <%= f.label :title %>
    <br />
    <%= f.text_field :title %>
    <br /><br />
    <%= f.label :content %>
    <br />
    <%= f.text_area :content %>
    <br /><br />
    <%= f.submit %>
  <% end %>
<% end %>