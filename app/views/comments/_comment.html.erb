<div class="comment">
  <%= comment.user.name %> - "<%= comment.content %>"
  &nbsp;
  <% if comment.user == current_user %>
    <%= link_to "Edit Comment", edit_comment_path(comment) %>
    &nbsp;|&nbsp;
    <%= link_to "Delete Comment", [comment], method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>