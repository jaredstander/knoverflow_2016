<div class="edit-form">
  <h1>Sign Up!</h1>
  <div class="error"><%= flash[:error] if flash[:error] %></div>
  <br /><br />
  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <br />
    <%= f.text_field :name %>
    <br /><br />
    <%= f.label :email %>
    <br />
    <%= f.text_field :email %>
    <br /><br />
    <%= f.label :password %>
    <br />
    <%= f.password_field :password %>
    <br /><br />
    <%= f.label :password_confirmation %>
    <br />
    <%= f.password_field :password_confirmation %>
    <br /><br />
    <%= f.submit "Sign Up" %>
  <% end %>
</div>